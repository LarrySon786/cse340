<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
<% } else { res.redirect('/') } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="message warning">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
        <% }) %>
    </ul>
<% } %>

<div class="accountManagementView">
    <h2>Welcome <%= accountData.account_firstname %> <%= accountData.account_lastname %></h2>

    <a href="/account/update/<%= accountData.account_id %>">Update My Account Info</a>

    <% if (accountData.account_type == "Admin") { %>
        <h3>Inventory Management</h3>
        <p><a href="/inv/management">Manage Inventory</a></p>
    <% } %> 

    <% if (accountData.account_type=="Employee" ) { %>
        <h3>Inventory Management</h3>
        <p><a href="/inv/management">Manage Inventory</a></p>
    <% } %>
</div>


