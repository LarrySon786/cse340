<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
<% } else { res.redirect('/') } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
    </ul>
<% } %>

<div class="login-box">
    <form id="login-form" action="/inv/add-classification" method="post">
        <label for="classification_name">Add Classification Name</label>
        <input type="text" id="classification_name" name="classification_name" required pattern="[A-Za-z0-9]{1,20}" pattern="[A-Za-z0-9]+">
        <input type="submit" value="Add Classification">
    </form>
</div>
