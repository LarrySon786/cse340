<% if (title) { %>
    <h1>
        <%= title %>
    </h1>
<% } else { res.redirect('/') } %>

<%- messages() %>

<% if (errors) { %>
    <ul class="notice">
        <% errors.array().forEach(error=> { %>
            <li>
                <%= error.msg %>
            </li>
            <% }) %>
    </ul>
    <% } %>

<div class="login-box">
    <p>Confirm Deletion - The delete is permanent.</p>
    <form id="deleteForm" action="/inv/delete" method="post">
        <label for="inv_make">Make</label>
        <input type="text" id="inv_make" name="inv_make" required pattern="[A-Za-z0-9]{1,20}"
        pattern="[A-Za-z0-9]+" readonly value="<%= locals.inv_make %>">
        
        <label for="inv_model">Model</label>
        <input type="text" id="inv_model" name="inv_model" required value="<%= locals.inv_model %>" readonly pattern="^[A-Za-z0-9]+$">
        
        <label for="inv_year">Year</label>
        <input type="number" id="inv_year" name="inv_year" required value="<%= locals.inv_year %>" readonly pattern="^[0-9]+$">

        <label for="inv_price">Price</label>
        <input type="text" id="inv_price" name="inv_price" required value="<%= locals.inv_price %>" readonly pattern="^[A-Za-z0-9]+$">
        
        <input type="submit" id="submitButton" name="submit" value="Delete">
        <input type="hidden" name="inv_id" <% if(locals.inv_id) { %> value="<%= locals.inv_id %>"
            <% } %>>
    </form>
</div>


